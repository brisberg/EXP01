extends ../layouts/layout

block content
  h1 #{ pilot.name }
  p Credits: #{ pilot.cash }

  p Inventory:
  table
    thead
      tr
        th Name
        th Price
        th Quantity
    tbody
      - each record in pilot.inventory
        tr
          td #{ record.ware.name }
          td #{ record.ware.baseValue }
          td #{ record.quantity }

  a.button(href='/pilot/list') Back
